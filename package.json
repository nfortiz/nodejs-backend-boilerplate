{
  "name": "nodejs-backend-boilerplate",
  "version": "0.1.0",
  "description": "A nodejs starter project with express and passport",
  "main": "index.js",
  "scripts": {
    "dev": "DEBUG=app:* nodemon src/bin/www",
    "start": "NODE_ENV=production node src/bin/www",
    "lint": "eslint src/ --ext .js --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "passport"
  ],
  "author": "nfortiz",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "helmet": "^3.23.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.19",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ]
  }
}
